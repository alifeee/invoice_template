<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Invoice {{ id }}</title>

    <!-- fonts -->
    <style>
      @font-face {
        font-family: "bboron";
        src: url("../static/bboron.woff");
      }
    </style>
    <!-- style -->
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        font-family: "bboron", sans-serif;
        font-size: 16px;
        line-height: 1.5;
        margin: 0;
        padding: 0;
        /* max width A4 */
        width: 21cm;
        max-width: 21cm;
        /* max height A4 */
        height: 29.7cm;
        max-height: 29.7cm;
        /* padding for A4 */
        margin: 1cm;
        border: 1px solid red;
      }
      h1,
      h2,
      h3,
      th {
        font-family: "bboron", sans-serif;
      }

      header {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      header h1 {
        margin-bottom: 0;
      }
      header .date {
        font-size: 0.8em;
        color: #aaa;
      }
      header .amount {
        font-size: 2em;
        font-weight: bold;
      }
      header .bank-info .transfer {
        font-size: 0.8em;
        color: #aaa;
      }
      header .bank-reference .info {
        font-size: 0.8em;
        color: #aaa;
      }

      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      main hr {
        width: 70%;
        margin-top: 1rem;
        margin-bottom: 1rem;
        border: none;
        border-bottom: 1px solid #ccc;
      }

      .contact-info {
        width: 80%;
        margin-top: 1rem;
        margin-bottom: 1rem;
        border-collapse: collapse;
        table-layout: fixed;
      }
      .contact-info th {
        text-align: left;
        font-size: 0.8em;
        color: #aaa;
      }
      .contact-info td {
        padding: 0.5rem;
      }

      .items {
        width: 80%;
        margin-top: 1rem;
        margin-bottom: 1rem;
        border-collapse: collapse;
      }
      .items th {
        text-align: left;
        font-size: 0.8em;
        color: #aaa;
      }
      .items td {
        padding: 0.5rem;
      }
    </style>
    <!-- print style -->
    <style media="print">
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        border: none;
      }
    </style>
    <script>
      func = async () => await page.evaluate(() => document.fonts.ready);
      func();
    </script>
  </head>

  <body>
    <header>
      <h1>INVOICE #{{ id }} - {{#upper}}{{ from.name }}{{/upper}}</h1>
      <span class="generated date">
        sent {{#verboseDate}}{{ issue_date }}{{/verboseDate}} (<time>{{
          issue_date
        }}</time
        >)
      </span>
      <span class="amount">
        <span class="currency">{{ currency }}</span>
        <span class="currency_symbol">{{ currency_symbol }}</span
        ><span class="value">{{ amount }}</span>
      </span>
      <span class="due date">
        due by {{#verboseDate}}{{ due_date }}{{/verboseDate}} (<time>{{
          due_date
        }}</time
        >)
      </span>
      <span class="bank-info">
        <span class="transfer">via bank transfer to</span>
        <span class="bank">{{ from.bank }}</span>
      </span>
      <span class="bank-reference">
        <span class="info">with reference</span>
        <span class="reference">invoice_{{ id }}</span>
      </span>
    </header>
    <main>
      <hr />
      <table class="contact-info">
        <tr>
          <th>FROM</th>
          <th>TO</th>
        </tr>
        <tr class="name">
          <td>{{ from.name }}</td>
          <td>{{ to.name }}</td>
        </tr>
        <tr class="email">
          <td>
            <a href="mailto:{{ from.email }}">{{ from.email }}</a>
          </td>
          <td>
            <a href="mailto:{{ to.email }}">{{ to.email }}</a>
          </td>
        </tr>
        <tr class="address">
          <td>{{ from.address }}</td>
          <td>{{ to.address }}</td>
        </tr>
      </table>
      <hr />
      <table class="items">
        <tr>
          <th>Item</th>
          <th>Time (h)</th>
          <th>Price</th>
        </tr>
        {{#items}}
        <tr>
          <td>
            {{ title }} {{#url}}<a href="{{ url }}" target="_blank"> â‡—</a
            >{{/url}}
          </td>
          <td>{{ time_h }}</td>
          <td>{{ charge }}</td>
        </tr>
        {{/items}}
      </table>
    </main>
  </body>
</html>
